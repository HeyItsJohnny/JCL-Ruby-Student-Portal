<table class="table">
    <h1>Jonathan Laroco's Students List</h1>
    <p class="lead">Here is a student's list. Users can add, delete, and edit users.</p>
    <p></p>
    <a href="/students/new"><button class="btn btn-lg btn-primary btn-block" type="submit">Add New Student</button></a>
    <thead>
    <tr>
        <th>Student ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>View</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
        <% @students.each do |student| %>
            <tr>
                <td><%= student.studentid %></td>
                <td><%= student.firstname %></td>
                <td><%= student.lastname %></td>
                <td><%= link_to 'Show', student, class: 'btn btn-info' %></td>
                <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-warning' %></td>
                <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            </tr>
        <% end %>
    </tbody>
</table> 
        

